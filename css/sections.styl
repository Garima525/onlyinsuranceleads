.process {


	.processStep {
		background: $sectionBg;
		padding-top: 1rem;
		padding-bottom: 1rem;
		transition: background 0.3s;

		* {
			transition: color 0.2s;
		}


		&:hover {
			background: $accentColor2;
			* {
				color: #fff;
			}
		}
	}

	.sectionTitle {
		margin-bottom: 4rem;
	}

	.processIcon {
		display: block;
		height: 150px;
		margin: 0 auto 1em auto;
	}

	.processTitle {
		font-weight: 600;
		margin: 0.8em 0;
	}

	+below($small) {
		.processDescription {
			text-align: left;
		}
	}

	+below($xsmall){

		.processStep {
			position: relative;
		}

		.processIcon {
			position: absolute;
			left: 0;
			margin: 0 1em 1em 0;
			height: 50px;
		}

		.processDescription,
		.processTitle {
			text-align: left;
		}

		clearfix();

	}

}

