}


.gallery {

	+above($medium) {
		padding-top: 4rem;
	}

	background: linear-gradient(to bottom, rgba(255,255,255,1) 0%, rgba(255,255,255,1) 40%, rgba(232,232,232,1) 70%, rgba(209,209,209,1) 70%, rgba(250,250,250,1) 90%);

	.sectionTitle,
	.sectionDescription {
		text-align: center;
	}

	.swiper-container {
		padding-top: 3em;
        padding-bottom: 2em;
	}

	.swiper-container-3d  {
		.swiper-slide-shadow-left {
			//background-image: linear-gradient(to left,rgba(0,0,0,.25),rgba(0,0,0,0));
			display: none;
		}

		.swiper-slide-shadow-right {
			//background-image: linear-gradient(to right,rgba(0,0,0,.25),rgba(0,0,0,0));
			display: none;
		}
	}

	.swiper-pagination-bullet-active {
		background: $accentColor;
	}

	.swiper-label {
		color: $accentColor;
		font-size: 0.85rem;
		font-weight: bold;
		padding-top: 1.5em;
		padding-bottom: 0.5em;
		text-align: center;
	}

	.letterGallery {

	}

	.letterSlide {
		+above($mid) {
			max-width: 33%;
		}
		+below($small) {
			max-width: 100%;
		}
		//max-width: 33%;
		text-align: center;
		position: relative;


		&.swiper-slide-active {
			.letterPreviewThumb {
				shadow(4);
			}
		}
	}

	.letterPreviewThumb {
		shadow(1);

		+below($small) {
			height: 400px;
		}
	}

}

.recap {
	.processTitle {
		text-align: left;
	}

	.sectionSubTitle {
		margin-bottom: 2em;
		margin-top: 2.5em;
		text-align: center;

		&:first-of-type {
			margin-top: 1em;
		}
	}

	.processIcon {
		width: 68px;

	}

	+below($small) {
		.row {
			width: 82%;
			margin: 0 auto;
		}
	}

	+below(1000px) {
		.recapDescription {
			width: 80%;
			margin-bottom: 1em;
			clearfix();
		}

		.iconContainer {
			float: left;
			margin-left: 0 !important;
			width: auto;
		}
	}

	+below(700px) {
		.recapDescription {
			width: 70%;
		}
	}

	+below(550px) {
		.iconContainer {
			display: none;
		}
		.recapDescription {
			width: 100%;
			float: left;
		}
	}
}

section.quotes {
	background: $quoteBg;
	font-family: $quoteFont;
	font-style: italic;
	position: relative;

	+above($large) {
		padding-top: 3em;
		padding-bottom: 3em;
		font-size: 1.4em;
	}

	+below($mid) {
		padding-top: 1em;
		padding-bottom: 1em;
	}

	+below($large) {
		font-size: 1.3rem;
	}

	+below($medium) {
		font-size: 1.2rem;
	}

	.quoteContainer {
		position: relative;
	}

	.quoteBlock {
		position: absolute;
		top: 0;
	}

	.hidden {
		opacity: 0;
		visibility: hidden;
	}


	blockquote {
		border-left: 0;
		color: $quoteTextColor;
	}

	cite,
	#citeCompany {
		color: $quoteTextColor;
		display: block;
		font-size: 0.75em;
		font-style: normal;
		padding-left: 1.5rem;
	}

	#citeCompany {
		font-size: 0.6em;


		&.allstate,
		&.farmers {
			background-size: contain;
			background-repeat: no-repeat;
			height: 38px;
			margin-left: 1.5rem;
			margin-top: 0.6rem;

			.companyName {
				display: none;
			}
		}

		&.allstate {
			background-image: url("../images/logos/allstate.png");
			height: 30px;
		}

		/*&.farmers {
			background-image: url("../images/logos/farmers.png");
		}*/
	}
}