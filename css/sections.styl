#targetedProspects {

	.columns {
		+above($mid){
			padding-top: 3em;
		}
	}

	.sectionDescription {
		+above($medium){
			padding-top: 6em;
		}

		+below($medium) {
			padding-top: 7em;
			padding-right: 2em;
			//padding-left: 2em;
		}

		+below($mid) {
			padding-top: 1em;
			display: block;
			width: 100%;
			margin-right: 0;
			padding: 0 10%;
			float: none;
		}

		+below($small) {
			width: 80%;
			padding: 0;
		}

	}

	$prospectsWidth = 452px;
	$prospectsHeight = 358px;

	.prospectsImgContainer {
		+below($mid) {
			left: 0;
			margin: 0 auto;
			float: none;
			//transform: scale(1);
		}
	}

	.prospectsImg {
		background: url("../images/targetedProspects/targetedProspects.svg") no-repeat 50% 50%;
		background-size: contain;
		position: relative;
		width: $prospectsWidth;
		height: $prospectsHeight;

		+below($medium) {
			transform: scale(0.8);
			left: -55px;
		}

		.viewer {
			background: url("../images/targetedProspects/viewer.svg") no-repeat 50% 50%;
			background-size: contain;
			position: absolute;
			left: 135px;
			top: 70px;
			width: 175px;
			height: 175px;

			.hq {
				width: 54px;
				position: absolute;
				left: 67px;
				top: 60px;
				z-index: 5;
			}

			.ring,
			.home {
				background: #44BAE3;
				border-radius: 50%;
				position: absolute;
				top: 13px;
				left: 20px;
				width: 145px;
				height: 145px;
				scale: 0.1;
				opacity: 1;
			}

			.home {
				background: url("../images/header/home1.jpg") no-repeat;
				background-size: cover;
				opacity: 0.1;
				transition: all 0.3s;

				&.home1 {
					background-image: url('../images/header/home1.jpg');
				}

				&.home2 {
					background-image: url('../images/header/home2.jpg');
				}

				&.home3 {
					background-image: url('../images/header/home3.jpg');
				}

				&.home4 {
					background-image: url('../images/header/home4.jpg');
				}

				&.home5 {
					background-image: url('../images/header/home5.jpg');
				}

				&.home6 {
					background-image: url('../images/header/home6.jpg');
				}

				&.home7 {
					background-image: url('../images/header/home7.jpg');
				}
			}
		}
		.hqQuote {
			color: #44BAE3;
			font-family: LCDNormal;
			font-size: 1.5em;
			position: absolute;
			bottom: 28px;
			left: 157px;
			text-align: center;
			width: 140px;

		}
	}
}

#agentMap {
	padding-bottom:0;
	padding-top: 0;
	position: relative;

	.icon_container {
		width: 30px;
	}

	.icon_competitor {
		margin-right: 5px;
		width: 25px;
	}
	.prospectsDetail {
		background: $accentColor;
		height: 350px;
		min-width: 350px;
		position: relative;
		z-index: 10;
		padding: 0;
		color: #fff;

		.prospectsContainer {
			padding: 2em;
			padding-bottom: 0.5em;
		}

		.prospects {
			font-size: 1.25em;
		}

		.closestCompetitors {
			background-color: #4D2981;
			padding: 0.5em;
			text-transform: uppercase;
			text-align: center;
		}

		.competitorsContainer {
			padding: 0.5em 1em;
			table {
				width: 100%;
				tr {
					border-bottom: 1px solid rgba(#fff, 0.2);
					font-size: 0.9em;
					&:last-of-type {
						border-bottom: 0;
					}
				}
				td {
					padding: 0.5em 0;
					
					&.competitorName {
						padding-left: 1em;
					}
				}
			}

		}
	}

	#map {
		position: absolute;
		left: 0;
		top: 0;
		height: 350px;
		width: 100%;
	}
}

