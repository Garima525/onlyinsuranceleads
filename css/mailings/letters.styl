.letterTemplate {
	height: lh(100vw);
	width: 100vw;
	.top {
		height: lh(30vw)
		overflow: hidden;
		position: relative;
	}

	.middle {
		height: lh(58vw)
		overflow: hidden;
	}

	.bottom {
		height: lh(12vw);
		overflow: hidden;
	}

	.pad {
		padding: $letterBodyPadding;
		padding-bottom: ($letterBodyPadding / 2);
	}

	.logo {
		width: 30vw;
	}

	.letter-top {
		padding: $letterBodyPadding;
	}


	.mailto {
		position: absolute;
		left: $letterBodyPadding + 8vw;
		top: lh(20vw);
	}

	.letterhead {
		color: $blue;
		font-size: 0.9rem;
		line-height: 1.6;

		.company {
			color: $textColor;
			font-size: 1.2rem;
			margin-bottom: 3%;
		}
	}

	.stripe {
		height: lh(18vw);
		overflow: hidden;
		padding: $letterBodyPadding;
		padding-left: $letterBodyPadding + 8vw;
		font-size: 2.5rem;
		font-style: italic;
		display: flex;
		align-items: center;
		justify-content: space-between;
		background-repeat: no-repeat;
		background-position: 100% 50%;

		&.blue {
			background-color: $blue;
			color: #fff;
		}

		&.white {
			background-color: #fff;
			border-top: 0.25vw solid $blue;
			border-bottom: 0.25vw solid $blue;
			padding-left: $letterBodyPadding;
		}	
	}

	.split_detail {
		padding-top: lh(1.5vw);

		.bodyText {
			padding-left: 3%;
			padding-right: 3%;	
		}
	}

	.callNow {
		color: $blue;
		font-size: 1.3rem;
		font-style: italic;
		font-weight: bold;
		padding: ($letterBodyPadding / 2);
		text-align: center;
		.website {
			font-size: 1.1rem;	
		}
	}

	&.letterFooterBlue {
		.bottom {
			background: $blue;
		}
		.callNow {
			color: #fff;
		}	
	}
	

	&.letter4 {
		.stripe {
			background-image: url("/mailings/letters/images/risingrates.jpg");
			background-size: auto 110%;
		}	
	}

	&.letter5 {
		.stripe {
			background-image: url("/mailings/letters/images/righthands.jpg");
			background-size: auto 90%;
			background-position: 90%;
			color: $gold;
		}
	}

	&.letter6 {
		.stripe {
			background-image: url("/mailings/letters/images/homeentry.jpg");
			background-size: 100%;
		}	
	}

	&.letter7 {
		.stripe {
			background-image: url("/mailings/letters/images/mailbox7.jpg");
			background-size: auto 90%;
			background-position: 90% 100%;
		}	
	}

	&.letter9 {
		.stripe {
			background-image: url("/mailings/letters/images/time.jpg");
			background-size: auto 100%;
			background-position: 95% 100%;
			color: $red;
		}	
	}

	&.letter12 {
		.stripe {
			background-image: url("/mailings/letters/images/bank.jpg");
			background-size: auto 100%;
			background-position: 95% 100%;
			color: $red;
		}

		.notes,
		.savings {
			margin: 2vw 0;
			font-weight: bold;
			font-size: 1.1rem;
			font-style: italic;
			text-align: center;
		}
		.note {
			margin-bottom: 1vw;
		}

		.savings {
			color: $red;
		}
	}
	

}


.letterTextImageSplit {
	.split_detail {
		padding: 0 $letterBodyPadding;
		padding-bottom: 1%;

		.bodyText {
			p {
				font-size: 1em;
				margin-top: 2%;
			}	
		}

		.image {
			background-size: contain;
			background-repeat: no-repeat;
		}
	}
	
	.quoteContainer {
		padding: 0 $letterBodyPadding;

		.quote {
			border-radius: 1vw;	
			tr {
				td {
					padding: lh(0.65vw) 0;
				}
			}
		}

		.padWrap {
			padding-left 15%;
			padding-right: 15%;
		}

		.quotePrice {
			margin-top: 3%;
			display: flex;
			justify-content: space-between;
			padding-left 15%;
			padding-right: 10%;

			.est,
			.price {
				flex: 1 1 auto;	
			}

			.est {
				text-align: left;	
			}

			.price {
				text-align: right;	
			}
		}
	}

	.disclaimerWrapper {
		padding: 0 2vw 1vw 2vw;
		border-bottom: 0.2vh solid rgba(#000000, 0.1);
		.disclaimer {
		}
	}

	&.letter3 {
		.image {
			background-image: url("/mailings/letters/images/burningRates.jpg");
		}
	}

	&.letter2 {
		.image {
			background-image: url("/mailings/letters/images/mailbox2.jpg");
			background-position-x: 95%;
		}	
	}
	&.letter8 {
		.image {
			background-image: url("/mailings/letters/images/doormat.jpg");
			background-size: 95%;
			background-position: 100%;
		}	
	}
	&.letter10 {
		.image {
			background-image: url("/mailings/letters/images/moneydrain.jpg");
			background-size: 100%;
			background-position: 100%;
		}	
	}
	&.letter11 {
		.image {
			background-image: url("/mailings/letters/images/throwingaway.jpg");
			background-size: auto 95%;
			background-position: 60% 0;
		}	
	}
}

.letter1 {

	.logo {
		max-width: 25vw;
	}

	.letter-top .company {
		margin-top: 2vw;	
	}

	.main {
		padding-top: 0;	
	}

	.quote {
		margin-top: 2vw;
		border-radius: 1vw;
	}

	.sidebar {
		padding-left: 2vw;
		.row {
			padding: 1vw 0;
			border-bottom: 0.1vw solid rgba(#000, 0.1);
			&:last-child {
				border-bottom: 0;	
			}
		}

		.company {
			color: rgba(#000, 0.5);	
		}

		.call {
			font-size: 0.8em;
			div {
				padding-bottom: 0.5vw;
			}
			.phone {
				font-weight: bold;
			}
			.email {
				font-size: 0.75em;	
			}

			.visit {
				font-size: 0.75em;
				margin-top: 1vw;	
			}

			.website {
				font-size: 0.75em;
			}
		}

		.sidebarIcons {
			width: 75%;
		}
	}

	.callNow.letterFooter {
		background-color: #fff;
		font-size: 0.7rem;
		font-style: normal;
		color: rgba(#000000, 0.5);
		padding-left: $letterBodyPadding;
		padding-right: $letterBodyPadding;
		.addr {
			border-top: 0.1vw solid rgba(#000000, 0.2);
			padding-top: 2vw;
		}
	}
	
}