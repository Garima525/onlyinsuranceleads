.about {
	.mainMenu {
		box-shadow: none;
	}

	.pageHeader {
		background: url("../images/header/aboutHeaderBg.jpg") no-repeat top left;
		background-size: cover;
		margin-top: $mainMenuHeight;
		margin-bottom: 4rem;
		text-align: center;

		.pageTitle {

			+above($medium) {
				font-size: 2.6rem;
				margin-bottom: 2rem;
			}

			text-shadow: 0px 2px 8px rgba(0,0,0,0.90);

			+below($medium) {
				margin-bottom: 2rem;
				padding-bottom: 0;
			}
		}

		.pageSubTitle {
			padding-top: 0;
			width: 70%;
			margin-left: auto;
			margin-right: auto;
			text-shadow: 0px 2px 8px rgba(0,0,0,0.90);
		}
	}

	.agents {
		.sectionDescriptions {
			padding-bottom: $sectionPaddingLarge;
		}

		.formerAgents {
			margin-left: 60px;
		}
	}

	.leadership {
		background: $accentColor2;

		.sectionSubTitle {
			font-size: 1.4rem;
			font-weight: 300;
			width: 90%;
			margin-left: auto;
			margin-right: auto;
		}

		* {
			color: #fff;
			text-align: center;
		}
	}


	.leadership,
	.team {
		.sectionTitle {
			font-size: 2.3em;
			text-align: center;
		}
	}

	.team {

		.sectionTitle {
			margin-bottom: 2.5rem;
		}
		.profile {

			.profileImage {
				background-size: cover;
				border: 2px solid $accentColor2;
				border-radius: 50%;
				margin: 0 auto;
				width: 178px;
				height: 178px;

				&.david {
					background: url('../images/profileDavid.jpg') no-repeat;
					background-size: cover;
				}

				&.ben {
					background: url('../images/profileBen.jpg') no-repeat;
					background-size: cover;
				}
			}

			.sectionSubTitle {
				font-size: 1.5rem;
				font-weight: 400;
				text-align: center;
				margin-top: 1.7rem;
				margin-bottom: 0;
			}

			.bioTitle {
				margin-top: 0;
				font-size: 1.1rem;
			}

			.bio {
				width: 80%;
				margin-left: auto;
				margin-right: auto;

				.connectLogo {
					height: 48px;
				}
			}
		}

	}
	
	.fast {
		border-bottom: 2px solid #F4ED29;
		color: #F4ED29;
		display: inline-block;
		padding-left: 0.25em;
		padding-right: 0.25em;
	}


	.mailingsContainer {
		text-align: center;
		

		.over {
			font-style: italic;
			font-size: 1.5rem;
		}

		.mailed {
			font-style: italic;
			font-size: 0.9rem;
			margin-top: 0.25rem;
		}
	}

	.odometer {
		font-size: 1.75rem;
	}

}