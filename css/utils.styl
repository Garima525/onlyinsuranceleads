percent($decimal) {
	return ($decimal * 100)%;
}

// Credit: Nicolas Gallagher and SUIT CSS.

.embed-responsive {
	position: relative;
	display: block;
	width: 100%;
	padding: 0;
	overflow: hidden;

	&::before {
		display: block;
		content: "";
	}

	.embed-responsive-item,
	iframe,
	embed,
	object,
	video {
		position: absolute;
		top: 0;
		bottom: 0;
		left: 0;
		width: 100%;
		height: 100%;
		border: 0;
	}
}

.embed-responsive-ratio {
	&::before {
		padding-top: percent(22 / 17);
	}
}

.postcard .embed-responsive-ratio {
	&::before {
		padding-top: percent(3 / 2);
	}
}

.embed-responsive-letter {
	&::before {
		padding-top: percent(22 / 17);
	}
}

.embed-responsive-postcard {
	&::before {
		padding-top: percent(3 / 2);
	}
}

